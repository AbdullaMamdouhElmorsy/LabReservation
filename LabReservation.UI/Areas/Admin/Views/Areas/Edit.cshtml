@model LabReservation.UI.Areas.Admin.Models.AreaModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>AreaModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Citites" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.AreaId)
            <div class="form-group">
                <label>CityName</label>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Is Available At Home?</label>
                @Html.CheckBoxFor(model => model.IsAtHome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsAtHome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label asp-for="LabId" class="control-label">Lab</label>
                @Html.DropDownListFor(model => model.LabId, new SelectList(Model.LabModels, "LabId", "Name"), "Select LAb", new { @class = "form-control  input-sm" })
                @Html.ValidationMessageFor(model => model.LabId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label asp-for="CityId" class="control-label">City</label>
                @Html.DropDownListFor(model => model.CityId, new SelectList(Model.Citites, "CityId", "Name", Model.CityId), new { @class = "form-control  input-sm" })
                @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
