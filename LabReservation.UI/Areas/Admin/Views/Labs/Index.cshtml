@model IEnumerable<LabReservation.UI.Areas.Admin.Models.LabModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>          
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeFees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>        
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeFees)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { LabId = item.LabId }) |
                @Html.ActionLink("Delete", "Delete", new { LabId = item.LabId }) |
                @Html.ActionLink("Assign Tests To Lab", "Create", "LabTest" , new { LabId = item.LabId }) 
            </td>
        </tr>
}
    </tbody>
</table>
